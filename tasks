Console.WriteLine("ведите переменную b1: ");
double b1 = Convert.ToDouble(Console.ReadLine());
Console.WriteLine("ведите переменную k1: ";
double k1 = Convert.ToDouble(Console.ReadLine());
Console.WriteLine("ведите переменную b2: ";
double b2 = Convert.ToDouble(Console.ReadLine());
Console.WriteLine("ведите переменную k2: ";
double k2 = Convert.ToDouble(Console.ReadLine());

double x = -(b1 — b2) / (k1 — k2);
double y = k1 * x + b1;

Console.Write($"\n Точка пересечения двух прямых: [{x},{y}]");
